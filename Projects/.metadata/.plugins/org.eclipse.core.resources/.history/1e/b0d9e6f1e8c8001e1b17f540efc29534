	<script>
    document.addEventListener("DOMContentLoaded", function () {
        var fromDateInput = document.getElementById("fromDate");
        var toDateInput = document.getElementById("toDate");

        fromDateInput.addEventListener("input", function () {
            validateDateRange();
        });

        toDateInput.addEventListener("input", function () {
            validateDateRange();
        });

        function validateDateRange() {
            var fromDate = new Date(fromDateInput.value);
            var toDate = new Date(toDateInput.value);
            var currentDate = new Date();

            
            var differenceInMilliseconds = toDate - fromDate;
         
            var differenceInDays = differenceInMilliseconds / (1000 * 3600 * 24);

            if (toDate > currentDate) {
                toDateInput.setCustomValidity("To date cannot be in the future.");
            } else if (differenceInDays > 90) {
                toDateInput.setCustomValidity("Difference between dates must be less than or equal to 90 days.");
            } else if (fromDate > toDate) {
                toDateInput.setCustomValidity("To date must be after the from date.");
            } else {
                toDateInput.setCustomValidity("");
            }
        }
    });
</script>
	
